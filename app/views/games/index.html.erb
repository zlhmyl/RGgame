<div class="container">
  <div class="col-sm-offset-2 col-sm-8">
      <div class="panel">
<p id="notice"><%= notice %></p>

<h1 align="center">桌游列表</h1>

<table align="center" width="100%">
  <thead>
    <tr>
      <th style="text-align:center;vertical-align:middle;">游戏名称</th>
      <th style="text-align:center;vertical-align:middle;">游戏类型</th>
      <th style="text-align:center;vertical-align:middle;">详细信息</th>
      <th style="text-align:center;vertical-align:middle;">得分</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.type %></td>
        <td><%= game.info %></td>
        <td><%= game.point %></td>
        <td><%= link_to '桌游详情', game %></td>
        <% if logged_in? %>
        <td><%= link_to '打分', edit_game_path(game) %></td>
        <% end %>
             </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</div>
</div>

